<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studentActivity">

    <ScrollView
        android:background="#edf2ff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--        First Linear Layout-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--            Linear Layout for First Row-->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:scaleType="fitXY"
                            android:id="@+id/ncc_student"
                            android:background="@color/white"
                            android:layout_width="130dp"
                            android:src="@drawable/ncc"
                            android:layout_height="130dp"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="NCC"
                        />


                </LinearLayout>


                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/alumini_student"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/alumini"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="ALUMNI"
                        />
                </LinearLayout>


            </LinearLayout>

            <!--            Linear Layout for Second Row-->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/scholarship_student"
                            android:background="@color/white"
                            android:layout_width="130dp"
                            android:src="@drawable/scholarship"
                            android:layout_height="130dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="SCHOLARSHIP"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/assosiation_student"
                            android:background="@color/white"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/assosiation"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="19dp"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="STUDENT      ASSOSIATION"
                        />
                </LinearLayout>

            </LinearLayout>

            <!--            Linear Layout for third Row-->
            <LinearLayout
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginRight="50dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/nss_student"
                            android:background="@color/white"
                            android:layout_width="130dp"
                            android:src="@drawable/nss"
                            android:layout_height="130dp"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="NSS"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="3dp"
                        android:background="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:background="@color/white"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:src="@drawable/sc"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:gravity="center_horizontal"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="SC/ST CELL"
                        />
                </LinearLayout>

            </LinearLayout>

            <!--            Linear Layout for fourth Row-->


            <!--            Linear Layout For Fifth Row-->




        </LinearLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>