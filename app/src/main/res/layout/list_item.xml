<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingTop="10dp"
    >
    <LinearLayout
        android:layout_marginTop="25dp"
        android:paddingTop="5dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:text="About : "
            android:textColor="@color/black"
            android:textSize="18dp" />
            <TextView
                android:id="@+id/notice_cause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/latolight"
                android:padding="7dp"
                android:text="Academics "
                android:textColor="@color/black"
                android:textSize="16dp" />
            />
        </LinearLayout>


        <TextView
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:layout_gravity="right"
            android:text="time"
            android:id="@+id/notice_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"/>

        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="15dp"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:id="@+id/notice_image"
                android:fitsSystemWindows="true"
                android:scaleType="fitXY"
                android:src="@drawable/pdfimage" />
            <TextView
                android:textColor="@color/black"
                android:layout_marginLeft="10dp"
                android:textSize="16dp"
                android:layout_toRightOf="@+id/notice_image"
                android:text="Notice About"
                android:id="@+id/noticeinfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <View
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#a8a8a8"
            tools:ignore="MissingConstraints" />
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>